<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeoulBukbuDistrictOfficeOfEducationAlerts" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryVariant">@color/blue_2</item>
        <item name="colorOnPrimary">@color/black_org</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_1</item>
        <item name="colorSecondaryVariant">@color/blue_2</item>
        <item name="colorOnSecondary">@color/black_org</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Handle color -->
        <item name="colorControlActivated">@color/blue_1</item>

        <!-- PopupMenu style -->
        <item name="android:popupMenuStyle">@style/RoundPopupMenuStyle</item>

        <item name="progressWheelColor">@color/black_1</item>
        <item name="dialogBackgroundColor">@color/white_org</item>
        <item name="appBarBackgroundColor">@color/blue_1</item>
    </style>



    <!--====================================== TextView Style ======================================-->
    <style name="customTextViewColorBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_org</item>
        <item name="android:fontFamily">@font/esamanru_bold</item>
    </style>
    <style name="customTextViewColorMedium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_org</item>
        <item name="android:fontFamily">@font/esamanru_medium</item>
    </style>
    <style name="customTextViewColorLight" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_org</item>
        <item name="android:fontFamily">@font/esamanru_light</item>
    </style>
    <!--============================================================================================-->


    <!-- PopupDialog Style -->
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_close</item>
    </style>


    <!-- Tap layout Style -->
    <style name="customTabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/esamanru_light</item>
        <item name="android:background">@color/white_org</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorColor">@color/blue_2</item>
        <item name="tabTextColor">@color/black_org</item>
        <item name="tabIconTint">@color/blue_1</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
    </style>
</resources>